@model IEnumerable<Bai1_th.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />

<div style="margin: 10px auto; width: 70%">
    <h2 style="text-align: center; color: red;">Category Manager</h2>

    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                Mã loại
            </th>
            <th>
                Tên loại
            </th>

            <th>
                Lệnh
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IdCate }, new { @class = "btn btn-outline-success" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IdCate }, new { @class = "btn btn-outline-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IdCate }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }

    </table>
</div>

