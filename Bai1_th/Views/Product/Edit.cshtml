@model Bai1_th.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    textarea {
        width: 100%;
        height: 150px;
        border: 1px ridge;
        border-radius: 5px;
        padding: 10px 10px;
    }
</style>

<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>
<h3 style="color:blue">Cập nhật sản phẩm</h3>
<hr />
@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProID)

        <div class="form-group">
            <div class="control-label col-sm-2">TÊN SẢN PHẢM</div>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NamePro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">NHÓM SẢN PHẢM</div>
            <div class="col-sm-10">
                @Html.DropDownList("IdCate", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdCate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">HÌNH ẢNH</div>
            <div class="col-sm-10">
                <img src="@Url.Content(Model.ImagePath)" width="100" />
                @Html.TextBoxFor(model => model.UploadImage, htmlAttributes: new { @type = "file" })
                @Html.ValidationMessageFor(model => model.UploadImage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">MÔ TẢ</div>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                @Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
